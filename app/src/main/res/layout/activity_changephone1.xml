<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/actstyle">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_height="48dp"
        style="@style/item_Layout">

        <EditText style="@style/etLogin"
            android:id="@+id/etPhoneR"
            android:inputType="phone"
            android:hint="请输入11位手机号码"/>

    </LinearLayout>

    <View style="@style/separate_view" />

    <LinearLayout
        android:layout_height="48dp"
        style="@style/item_Layout">


        <EditText style="@style/etLogin"
            android:id="@+id/etVerifyR"
            android:inputType="number"
            android:layout_weight="1"
            android:hint="请输入验证码"/>

        <TextView
            android:text="获取验证码"
            android:id="@+id/tvVerifyR"
            android:gravity="center"
            android:textColor="@color/FontBlack"
            android:layout_marginRight="30dp"
            style="@style/icLogin" />

    </LinearLayout>

    <View
        android:background="@color/FillGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textColor="@color/FontBlack"
        android:text="为了您的账号安全，我们将验证账号当前关联的手机号"
        android:layout_marginTop="@dimen/margin_x"
        android:layout_marginLeft="@dimen/margin_x"
        android:layout_marginRight="@dimen/margin_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>