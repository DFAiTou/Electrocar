<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="@dimen/margin_x"
        android:layout_marginRight="@dimen/margin_x"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvName"
            android:textSize="@dimen/FontTitle_Small"
            android:textColor="@color/FontBlue"
            android:text="退款成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDate"
            android:textColor="@color/FontGray"
            android:layout_alignParentRight="true"
            android:text="退款日期：2016-09-05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNumR"
            android:layout_below="@+id/tvDate"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/FontTitle_Small"
            android:textColor="@color/FontBlack"
            android:layout_alignParentRight="true"
            android:text="$99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNameR"
            android:textColor="@color/FontGray"
            android:text="退款金额："
            android:layout_toLeftOf="@+id/tvNumR"
            android:layout_alignBottom="@+id/tvNumR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNumL"
            android:layout_toLeftOf="@+id/tvNameR"
            android:layout_marginRight="8dp"
            android:layout_alignBottom="@+id/tvNameR"
            android:textSize="@dimen/FontTitle_Small"
            android:textColor="@color/FontBlack"
            android:text="$99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNameL"
            android:textColor="@color/FontGray"
            android:text="可退款："
            android:layout_toLeftOf="@+id/tvNumL"
            android:layout_alignBottom="@+id/tvNumL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>