<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/it_bikelist_w1"
            android:layout_height="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/it_bikelist_w1"
            android:layout_height="@dimen/it_bikelist_w1"
            android:layout_marginLeft="@dimen/margin_x"
            android:src="@drawable/about_logo"
            app:civ_border_color="#09a1e8"
            app:civ_border_width="1dp" />

        <View
            android:layout_width="@dimen/it_bikelist_w1"
            android:layout_height="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_x"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBikeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NBbike3723"
                android:textColor="@color/FontBlack"
                android:textSize="@dimen/FontTitle" />

    </LinearLayout>

</LinearLayout>